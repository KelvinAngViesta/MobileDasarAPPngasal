<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="quewquewcrew.appngasal.view.activity.DetailLapangan">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item.lapang.grid.image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/lap1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:paddingTop="-5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/item.lapang.grid.name"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="Your Name"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/item.lapang.grid.alamat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left"
                            android:text="Alamat"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/item.lapang.grid.kecamatan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left"
                            android:text="Kecamatan"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/item.lapang.grid.notel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left"
                            android:text="No Handphone"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="180dp"
                        android:layout_marginTop="-65dp"
                        android:layout_marginBottom="3dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="3dp"
                            android:gravity="right"
                            android:text="RP."
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/item.lapang.grid.harga"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="35dp"
                            android:layout_marginTop="-23dp"
                            android:gravity="right"
                            android:text="Harga"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_marginLeft="210dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/jenis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jenis"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-8dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btndate"
                        android:layout_width="145dp"
                        android:layout_height="40dp"
                        android:text="Date"
                        android:background="#dea717"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="4dp"
                        />

                    <EditText
                        android:id="@+id/etextdate"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btntimestrat"
                        android:layout_width="145dp"
                        android:layout_height="40dp"
                        android:text="Time Start"
                        android:layout_marginBottom="4dp"
                        android:background="#dea717"
                        android:textColor="#FFFFFF"/>

                    <EditText
                        android:id="@+id/etexttimestart"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <Button
                        android:id="@+id/btntimestop"
                        android:layout_width="145dp"
                        android:layout_height="40dp"
                        android:text="Time Stop"
                        android:background="#dea717"
                        android:textColor="#FFFFFF"/>

                    <EditText
                        android:id="@+id/etexttimestop"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnbooking"
                android:layout_marginLeft="253dp"
                android:layout_width="150dp"
                android:background="#dea717"
                android:textColor="#FFFFFF"
                android:text="Booking"
                android:layout_height="wrap_content" />
        </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>
