<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.davidbezalellaoli.mwa14.view.fragment.user.UserVPContainerFragment">

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uservpcontainer.tablayout"
        android:background="#00aba9"
        app:tabIndicatorColor="#da532c"
        app:tabSelectedTextColor="#FFF"
        app:tabTextColor="#bbb">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/uservpcontainer.viewpager">
    </android.support.v4.view.ViewPager>

</LinearLayout>
