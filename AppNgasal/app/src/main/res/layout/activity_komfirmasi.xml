<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="quewquewcrew.appngasal.view.activity.Komfirmasi">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/item.lapang.grid.image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lap1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/item.lapang.grid.name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Your Name"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="Form Konfirmasi"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textAllCaps="true"
        android:textSize="16dp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_marginLeft="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:id="@+id/id_tanggal_booking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="TANGGAL BOOKING"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/id_waktu_booking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WAKTU BOOKING"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                >
                <TextView
                    android:layout_marginLeft="110dp"
                    android:layout_width="22dp"
                    android:layout_height="wrap_content"
                    android:text="RP."
                    />
                <TextView
                    android:id="@+id/id_total_harga"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="TOTAL HARGA"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        <Button
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:text="Pembayaran"
            android:background="#dea717"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"/>
</LinearLayout>
</LinearLayout>