<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="70dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="quewquewcrew.appngasal.view.fragment.auth.RegisterFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/register.name.container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="-33dp"
            android:layout_marginLeft="22dp"
            android:src="@mipmap/man"
            />
        <EditText
            android:id="@+id/register.name"
            android:layout_width="285dp"
            android:layout_marginLeft="55dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Name"
            android:textSize="15dp"
            android:ems="10"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/register.email.container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="-33dp"
            android:layout_marginLeft="22dp"
            android:src="@mipmap/emailicons"
            />
        <EditText
            android:id="@+id/register.email"
            android:layout_width="285dp"
            android:layout_marginLeft="55dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:textSize="15dp"
            android:ems="10"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/register.password.container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="-33dp"
            android:layout_marginLeft="22dp"
            android:src="@mipmap/passwordicon"
            />
        <EditText
            android:id="@+id/register.password"
            android:layout_width="285dp"
            android:layout_marginLeft="55dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:textSize="15dp"
            android:ems="10"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/register.repassword.container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="-43dp"
            android:layout_marginLeft="22dp"
            android:src="@mipmap/passwordicon"
            />
        <EditText
            android:id="@+id/register.repassword"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:inputType="textPassword"
            android:hint="Re-Password"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/register.register"
        android:layout_width="320dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:textAlignment="center"
        android:background="#DEA717"
        android:textColor="#FFFFFF"
        android:text="Register"/>
    <TextView
        android:id="@+id/register.login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="L O G I N"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>
</LinearLayout>
